<h1><%= @game.player1.name %> vs. <%= @game.player2.name %></h1>

<% if @game.player2.hit_points == 0 %>
  <h1><%= @game.player2.name%> loses!!!</h1>
  <% elsif @game.player1.hit_points == 0 %>
  <h1><%= @game.player1.name%> loses!!!</h1>
  <% else %>
<h1><%= @game.current_turn.name%>'s turn</h1>
<h2><%= @game.player2.name %>: <%=@game.player2.hit_points%> hit points</h2>
<h2><%= @game.player1.name %>: <%=@game.player1.hit_points%> hit points</h2>
<form action='/attack'>
<form action='/attack'>
<input type="submit" value="Attack">
</form>
<% end %>
